<% unless @email.blank? %>


<%= mail_to(@email.to_s, "Please use this link to send mail",  :subject => "Your Craigslist posting " + @email.to_s, :cc => "John.Kropka@gmail.com", 
	:body => "Regarding your craigslist posting" + @email.to_s  + @feed_body.gsub(/<\/?[^>]*>/, "")) %>
<% end %>


<h1 style="margin-left:1px;">Original Posting</h1>
<div id="posting">
	<%= @feed_body %>
</div>